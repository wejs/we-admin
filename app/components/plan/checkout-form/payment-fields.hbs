<div class="row">
  <div class="col-md-6 mb-3">
    <label for="cc-name">{{t 'Name on card'}}</label>
    <Input id="cc-name" name="ccName" class="form-control" @value="" required="required" />
    <small class="text-muted">{{t 'Full name as displayed on card'}}</small>
  </div>
  <div class="col-md-6 mb-3">
    <label for="cc-number">{{t 'Credit card number'}}</label>
    <Input id="cc-number" name="cc-number" class="form-control" @value="" required="required" />

    <OneWayCreditCardMask
      @value={{this.unmasked}}
      @update={{this.onUpdateCPF}}
      class="form-control"
      class='docs-border docs-border-grey'
    />
  </div>
</div>
<div class="row">
  <div class="col-md-3 mb-3">
    <label for="cc-expiration">{{t 'Expiration'}}</label>
    <Input id="cc-expiration" name="cc-expiration" class="form-control" @value="" required="required" />
  </div>
  <div class="col-md-3 mb-3">
    <label for="cc-expiration">{{t 'CVV'}}</label>
    <Input id="cc-cvv" name="cc-cvv" class="form-control" @value="" required="required" />
  </div>
</div>
