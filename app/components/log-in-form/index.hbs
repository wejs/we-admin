<p class="text-center small">
  {{t 'log-in-form.social.login.description'}}
</p>

<Auth::LoginWithGoogle::Btn class="btn btn-google btn-user btn-block" />
<Auth::LoginWithFacebook::Btn class="btn btn-facebook btn-user btn-block" />
<Auth::LoginWithGithub::Btn class="btn btn-github btn-user btn-block" />

<hr>
<p class="text-center small">
  {{t 'login-in-form.local.login.description'}}
</p>

<form class="form user" {{action 'authenticate' on='submit'}}>
  <div class="form-group">
    <div class="input-group input-group-lg">
      <div class="input-group-prepend">
        <label class="input-group-text" for="identification"><i class="fa fa-at"></i></label>
      </div> 
      {{input id='identification' type="email"
        placeholder=(t "form-placeholder-login-email")
        value=identification
        required="required"
        autofocus="true"
        class="form-control"
      }}
    </div>
  </div>

  <div class="form-group">
    <div class="input-group input-group-lg">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputPassword"><i class="fa fa-key"></i></label>
      </div>
      {{input id='password' placeholder=(t "form-placeholder-login-password") type='password' value=password required="required" class="form-control"}}
    </div>
  </div>

  {{!-- <div class="form-group">
    <div class="custom-control custom-checkbox small">
      <input type="checkbox" class="custom-control-input" id="customCheck">
      <label class="custom-control-label" for="customCheck">Remember Me</label>
    </div>
  </div> --}}

  <button class="btn btn-primary btn-user btn-block" type="submit">{{t 'form-login-submit'}}</button>
</form>
