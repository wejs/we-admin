<BsDropdown @tagName="li" class="nav-item dropdown no-arrow" as |dd|>
  <dd.toggle class="nav-link dropdown-toggle">
    <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{this.user.displayName}}</span>
    <WeImage
      @file={{this.user.avatar}}
      @defaultSrc="/dashboard/avatar.png"
      @size="medium"
      class="img-profile rounded-circle"
    />
  </dd.toggle>
  <dd.menu class="dropdown-menu-right shadow animated--grow-in" as |menu|>
    <menu.item>
      <menu.link-to @route="dash.profile">
        <i class="fa fa-user fa-fw mr-2 text-gray-400"></i>
        {{t 'Profile'}}
      </menu.link-to>
    </menu.item>
    <menu.divider/>
    <menu.item>
      <menu.link-to @route="logout">
        <i class="fa fa-sign-out fa-fw mr-2 text-gray-400"></i>
        {{t 'Logout'}}
      </menu.link-to>
    </menu.item>
  </dd.menu>
</BsDropdown>
