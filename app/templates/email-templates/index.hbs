<h1 class="page-header">Templates de email</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Identificador</th>
      <th>Label</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.emailTypes as |et|}}
      <tr>
        <td>{{et.id}}</td>
        <td>{{et.label}}</td>
        <td>
          {{#if et.emailTemplate.id}}
            {{#link-to 'email-templates.item' et.emailTemplate.id class="btn btn-default btn-sm"}}
              <i class="glyphicon glyphicon-pencil text-success"></i> Editar template
            {{/link-to}}
          {{else}}
            {{#link-to 'email-templates.create' (query-params type=et.id) class="btn btn-primary btn-sm"}}
              <i class="glyphicon glyphicon-plus"></i> Adicionar template
            {{/link-to}}
          {{/if}}
        </td>
      </tr>
    {{else}}

    {{/each}}
  </tbody>
</table>
