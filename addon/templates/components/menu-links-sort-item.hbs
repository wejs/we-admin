<div class="m-list-group-item-label">
  <div>
    <span>
      <i class="fa fa-arrows" aria-hidden="true"></i> {{link.text}}
      {{#bs-tooltip placement="top"}}ID: {{link.id}}{{/bs-tooltip}}
    </span>
    <span class="actions">
      {{#link-to 'menus.item.edit-link' link.menu.id link.id class="btn btn-sm btn-default"}}
        <i class="glyphicon glyphicon-pencil text-primary"></i>
        {{#bs-tooltip placement="top"}}Editar link [id:{{link.id}}]{{/bs-tooltip}}
      {{/link-to}}

      <a href="{{link.href}}" class="btn btn-default btn-sm" target="_blank">
        <i class="glyphicon glyphicon-share-alt"></i>
        {{#bs-tooltip placement="top"}}Abrir o endere√ßo do link{{/bs-tooltip}}
      </a>

      <button class="btn btn-sm btn-default" {{action 'deleteLink' link}}>
        <i class="glyphicon glyphicon-remove text-danger"></i>
        {{#bs-tooltip placement="top"}}Deletar link [id:{{link.id}}]{{/bs-tooltip}}
      </button>
    </span>

{{!--     {{#if hideForm}}
      <button type="button" class="btn btn-sm btn-default pull-right" {{action "openEditForm" false}}>
        <i class="fa fa-caret-down" aria-hidden="true"></i>
      </button>
    {{else}}
      <button type="button" class="btn btn-sm btn-default pull-right" {{action "openEditForm" true}}>
        <i class="fa fa-caret-up" aria-hidden="true"></i>
      </button>
    {{/if}} --}}
  </div>

</div>
<div class="m-list-subitems">
  {{menu-links-sort-list links=link.links group=group parentDepth=parentDepth onSortEnd=onSortEnd deleteLink=deleteLink}}
</div>

